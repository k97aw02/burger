<h1>Eat  da  Burger!</h1>
<div class="container">
 <div class="divL">
  <h2>Tasty looking Burgers!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burgers-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="divR">
  <h2>Devoured !</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burgers-devoured devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>
</div>
<h2>Add a Tasty Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
    <button type="submit" class="burger_button">Add a burger!</button></input>
  
  </div>
  
  
</form>
